pipeline {

    environment {
        PATH = "$PATH:/usr/local/bin"
    }
}
node {
 
    stage 'Checkout'
        checkout scm
    stage 'Build & UnitTest'
        sh "docker-compose -f docker-compose.yml up"
  
    stage 'Integration Test'
        sh "docker-compose -f docker-compose.yml up"
        sh "docker-compose -f docker-compose.yml down -v"
}